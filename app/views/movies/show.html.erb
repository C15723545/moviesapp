
<h3>Title: <strong><%= @movie.title %></strong></h3>

<p>
  <strong>Poster:</strong><br />
  <%= image_tag(@movie.poster) %>
</p>

<p>
  <strong>Trailer:</strong><br />
  <%= sanitize @movie.trailer, :tags => ['iframe'] %>
</p>

<p>
  <strong>Released on:</strong>
  <%= @movie.released_on %>
</p>

<p>
  <strong>Price to buy:</strong>
  <%= euro (@movie.price) %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %> | 

  <strong>Genre:</strong>
  <%= @movie.genre.name %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

