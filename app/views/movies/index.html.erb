
<h1>Movies</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Poster</th>
      <th>Price</th>
	  <th>Trailer</th>  
      <th>Released on</th>
      <th>Rating</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= image_tag movie.poster, :size => "60x85" %></td>
        <td><%= euro (movie.price) %></td>
		<td><%= movie.released_on %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.genre.name %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add New Movie', new_movie_path %><div align="right"><%= will_paginate @movies %></div>
